<?xml version="1.0" encoding="UTF-8"?>
<solver xmlns="https://www.optaplanner.org/xsd/solver"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="https://www.optaplanner.org/xsd/solver https://www.optaplanner.org/xsd/solver/solver.xsd">

  <solutionClass>com.rspc.timetable.optaplanner.TimetableSolution</solutionClass>
  <entityClass>com.rspc.timetable.optaplanner.PlannedClass</entityClass>

  <scoreDirectorFactory>
    <constraintProviderClass>com.rspc.timetable.optaplanner.TimetableConstraintProvider</constraintProviderClass>
  </scoreDirectorFactory>

  <termination>
    <secondsSpentLimit>20</secondsSpentLimit>
  </termination>

  <constructionHeuristic>
    <constructionHeuristicType>FIRST_FIT_DECREASING</constructionHeuristicType>
  </constructionHeuristic>

  <localSearch>
    <acceptor>
      <lateAcceptanceSize>400</lateAcceptanceSize>
    </acceptor>
    <forager>
      <acceptedCountLimit>400</acceptedCountLimit>
    </forager>
  </localSearch>
</solver>
